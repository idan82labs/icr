{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://icr.dev/schemas/memory_get.output.schema.json",
  "title": "memory_get Output",
  "description": "Output schema for the memory_get MCP tool",
  "oneOf": [
    {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "ok": {
          "type": "boolean",
          "const": true
        },
        "request_id": {
          "type": "string",
          "format": "uuid"
        },
        "entry": {
          "$ref": "common.schema.json#/$defs/MemoryEntry",
          "description": "The retrieved memory entry"
        },
        "found": {
          "type": "boolean",
          "description": "Whether the entry was found"
        }
      },
      "required": ["ok", "request_id", "found"]
    },
    {
      "$ref": "common.schema.json#/$defs/ErrorEnvelope"
    }
  ]
}
